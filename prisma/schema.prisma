// Prisma Schema para SQLite
// Define o modelo de dados para o banco de dados
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Modelo Pet - Gerenciamento de animais de estimação
model Pet {
  id      Int     @id @default(autoincrement())
  nome    String
  especie String
  raca    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("pets")
}
